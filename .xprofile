#!/bin/sh
xrandr --output DVI-I-0 --mode 1600x900 --pos 1920x180 --rotate normal --output DVI-I-1 --off --output HDMI-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP-0 --off --output DVI-D-0 --off --output DP-1 --off
nvidia-settings --assign CurrentMetaMode="DPY-0: nvidia-auto-select @1600x900 +1920+180 {ViewPortIn=1600x900, ViewPortOut=1600x900+0+0,ForceFullCompositionPipeline=On}, DPY-2: nvidia-auto-select @1920x1080 +0+0 {ViewPortIn=1920x1080, ViewPortOut=1920x1080+0+0,ForceFullCompositionPipeline=On}"
xinput --set-button-map 13 1 2 3 4 5 6 7 2 2

